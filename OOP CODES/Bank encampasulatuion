#include <iostream>
#include <string>
using namespace std;

class BankAccount {
private:
    int balance;
    string name;

public:   
/*setter method */
    void setBalance(int holder_balance) {
        balance = holder_balance;
    }

/*Getter method */
    int getBalance() {
        return balance;
    }

/*setter method */
    void setName(string holder_name) {
        name = holder_name;
    }


/*Getter method */
    string getName() {
        return name;
    }
};

int main() {
    BankHolder holder1;
    holder1.setName("Gepard");
    holder1.setBalance(1000);

    cout << "The bank holder is " << holder1.getName() << " with a balance of $" << holder1.getBalance() << endl;

    return 0;
}
